    <header>
        <h1>Mishmish Server v1.0</h1>
        <div class="server-status" id="status">جاري الاتصال بالسيرفر المخصص...</div>
    </header>

    <div class="gallery-container" id="gallery">
        </div>

    <footer>
        المحتوى مشفر ومخصص لمشمش فقط
    </footer>

    <script>
        // --- إعدادات Firebase الخاصة بك ---
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
            databaseURL: "https://YOUR_PROJECT_ID-default-rtdb.firebaseio.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_PROJECT_ID.appspot.com",
            messagingSenderId: "YOUR_ID",
            appId: "YOUR_APP_ID"
        };

        // بدء تشغيل Firebase
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();
        const galleryElement = document.getElementById('gallery');
        const statusElement = document.getElementById('status');

        // وظيفة جلب الصور وتحديثها لحظياً
        database.ref('images').on('value', (snapshot) => {
            galleryElement.innerHTML = ''; // مسح الصور الحالية لتحديثها بالجديد
            const data = snapshot.val();
            
            if (data) {
                statusElement.innerText = "● السيرفر متصل - تحديث لحظي نشط";
                Object.values(data).forEach(url => {
                    const card = document.createElement('div');
                    card.className = 'photo-card';
                    card.innerHTML = `<img src="${url}" alt="Mishmish Photo">`;
                    galleryElement.appendChild(card);
                });
            } else {
                statusElement.innerText = "السيرفر فارغ - بانتظار رفع الصور";
            }
        }, (error) => {
            statusElement.innerText = "خطأ في الاتصال بالسيرفر";
            statusElement.style.color = "red";
        });
    </script>

</body>
